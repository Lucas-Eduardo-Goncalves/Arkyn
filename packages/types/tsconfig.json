{
  "exclude": ["dist"], // Exclui o diretório "dist" da compilação do TypeScript
  "compilerOptions": {
    "verbatimModuleSyntax": true, // Habilita a sintaxe de módulo "verbatim"
    "lib": ["dom", "ESNext"], // Bibliotecas padrão incluídas durante a compilação
    "module": "ESNext", // Define o sistema de módulos a ser usado
    "target": "ESNext", // Versão do ECMAScript para a qual o código será compilado
    "strict": true, // Habilita todas as opções de verificação estrita
    "outDir": "./dist", // Diretório onde os arquivos JavaScript compilados serão gerados
    "declaration": true, // Habilita a geração de arquivos de declaração (.d.ts)
    "declarationDir": "./dist", // Diretório onde os arquivos de declaração (.d.ts) serão gerados
    "composite": false, // Habilita a compilação em modo de projeto
    "esModuleInterop": true, // Habilita interoperabilidade com módulos ECMAScript
    "forceConsistentCasingInFileNames": true, // Força o uso consistente de maiúsculas e minúsculas nos nomes de arquivo
    "isolatedModules": true, // Garante que cada arquivo seja tratado como um módulo independente
    "declarationMap": true, // Habilita a geração de arquivos de mapeamento de declaração (.d.ts.map)
    "inlineSources": false, // Não inclui o código-fonte TypeScript no arquivo de saída JavaScript
    "moduleResolution": "node", // Define o algoritmo de resolução de módulos
    // "noUnusedLocals": false, // Desativa a verificação de variáveis locais não utilizadas
    // "noUnusedParameters": false, // Desativa a verificação de parâmetros de função não utilizados
    "preserveWatchOutput": true, // Mantém a saída do terminal durante a execução do watch mode
    "skipLibCheck": true, // Ignora a verificação de tipos nos arquivos de biblioteca
    "types": ["bun-types"] // Tipos de declaração a serem incluídos no projeto
  }
}

{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "declarationMap": true,
    "isolatedModules": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext",
    "types": ["bun-types"],
    "verbatimModuleSyntax": true
  },
  "exclude": ["dist", "node_modules", "**/__test__"],
  "include": ["src/**/*.ts", "src/**/*.ts"]
}
